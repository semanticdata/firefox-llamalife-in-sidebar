{
  "manifest_version": 2,
  "name": "Llama Life Sidebar",
  "description": "Displays Llama Life in the sidebar.",
  "version": "1.1.2",
  "background": {
    "scripts": ["background.js"]
  },
    "applications": {
    "gecko": {
      "strict_min_version": "60.0"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "sidebar_action": {
    "default_icon": {
      "48": "icons/icon1_48.png",
      "96": "icons/icon1_96.png"
    },
    "default_title": "Llama Life",
    "default_panel": "sidebar/panel.html"
  },
  "icons": {
    "48": "icons/icon2_48.png",
    "96": "icons/icon2_96.png"
  },
  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Alt+Shift+5"
      },
      "description": "Toggle the Llama Life sidebar."
    }
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon1_48.png",
      "32": "icons/icon1_96.png"
    }
  }
}